{{>layout/header}}

<h1>Sample Data 등록</h1>

<div class="col-md-12">
    <div class="col-md-4">
        <form>
            <div class="form-group">
                <label for="date"> 날짜 </label>
                <input type="text" class="form-control" id="date" placeholder="날짜를 입력하세요">
            </div>
            <div class="form-group">
                <label for="salusrid"> 작성자 </label>
                <input type="text" class="form-control" id="salusrid" placeholder="작성자를 입력하세요">
            </div>
            <div class="form-group">
                <label for="ctgCD"> 카테고리 </label>
                <input type="text" class="form-control" id="ctgCD" placeholder="카테고리를 입력하세요">
            </div>
            <div class="form-group">
                <label for="title"> 제목 </label>
                <input type="text" class="form-control" id="title" placeholder="제목을 입력하세요">
            </div>
            <div class="form-group">
                <label for="contents"> 내용 </label>
                <textarea class="form-control" id="contents" placeholder="내용을 입력하세요"></textarea>
            </div>
            <div class="form-group">
                <label for="amount"> 금액 </label>
                <input type="text" class="form-control" id="amount" placeholder="금액을 입력하세요">
            </div>
        </form>
        <a href="/" role="button" class="btn btn-secondary">취소</a>
        <button type="button" class="btn btn-primary" id="btn-save">등록</button>
    </div>
</div>

{{>layout/footer}}
